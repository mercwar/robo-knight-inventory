name: PORTAL-LOG-AND-PUSH-TEST

on:
  workflow_dispatch: 

jobs:
  portal-test-job:
    runs-on: ubuntu-latest
    container: debian:bookworm-slim
    permissions:
      contents: write # Necessary for the push at the end

    steps:
      # 1. Pull the Repository
      - name: Checkout Repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      # 2. Setup Tooling
      - name: Install Git
        run: apt-get update && apt-get install -y git --no-install-recommends

      # 3. Log Logic
      - name: Write Portal Log
        run: |
          echo "[$(date)] TEST_PULSE: Initializing Log Logic..." > fire-portal.log
          echo "[$(date)] TEST_PULSE: Writing to fire-portal.log" >> fire-portal.log
          echo "[$(date)] TEST_PULSE: Environment Verified: Debian Bookworm." >> fire-portal.log

      # 4. Push Logic (At the end of the file)
      - name: Finalize and Push
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          
          echo "[$(date)] TEST_PULSE: Handing off to Git Finalizer." >> fire-portal.log
          
          git add fire-portal.log
          git commit -m "AVIS: Portal Test Pulse - Log and Push Complete"
          git push origin main
